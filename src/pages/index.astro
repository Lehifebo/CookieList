
---
import RecipeCard from "../components/RecipeCard.astro";
import recipes from "../data/recipes.json";
const items = recipes;
---
<section class="grid">
  {items.map(r => <RecipeCard recipe={r} />)}
</section>

<style>
  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
    gap: 18px; /* slightly larger gap since cards have borders now */
  }
</style>
